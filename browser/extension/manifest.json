{
  "manifest_version": 3,
  "name": "AnonNet",
  "version": "1.0.0",
  "description": "Monitor your AnonNet credit balance, network status, and enforce .anon-only browsing",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "host_permissions": [
    "http://127.0.0.1:19150/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "AnonNet Status",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "anonnet@anonnet.org",
      "strict_min_version": "115.0"
    }
  }
}
